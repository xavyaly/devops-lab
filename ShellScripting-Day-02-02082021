[cloudshell-user@ip-10-0-164-192 Shell-Scripting]$ cat -n read_array.sh 
     1  #!/bin/bash
     2
     3  program="Java Python PS SS Perl"
     4
     5  for n in $program
     6  do
     7          if [ $n == Java ]
     8          then
     9                  echo "$n is an advanced language"
    10          else
    11                  echo "$n is a scripting language"
    12          fi
    13  done
